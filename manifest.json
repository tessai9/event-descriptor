{
  "manifest_version": 3,
  "name": "EventDescriptor",
  "version": "0.1.0",
  "action": { "default_popup": "popup.html" },
  "permissions": [
    "tabs",
    "webNavigation",
    "clipboardWrite",
    "clipboardRead",
    "storage",
    "unlimitedStorage",
    "alarms",
    "scripting"
  ],
  "content_scripts": [
    {
      "js": ["content_script.js"],
      "css": ["style.css"],
      "matches": ["http://*/*", "https://*/*", "*://*/*"]
    }
  ],
  "host_permissions": ["http://*/*", "https://*/*", "*://*/*"]
}
